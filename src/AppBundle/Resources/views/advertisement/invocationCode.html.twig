{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <h1 class="page-header">Advertisement's invocation code</h1>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Client</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.client }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="well">
        &lt;ins data-ad-id="{{ entity.id }}"&gt;&lt;/ins&gt;<br>
        &lt;script async src="//{{ workerAddress }}/invoke.js"&gt;&lt;/script&gt;
    </div>
{% endblock %}
