<?xml version="1.0" encoding="utf-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="homepage" path="/">
        <default key="_controller">AppBundle:Index:index</default>
    </route>

    <route id="info" path="/info">
        <default key="_controller">AppBundle:Index:info</default>
    </route>

    <route id="client_list" path="/client">
        <default key="_controller">AppBundle:Client:list</default>
    </route>

    <route id="client_add" path="/client-add">
        <default key="_controller">AppBundle:Client:add</default>
    </route>

    <route id="client_edit" path="/client-edit/{id}">
        <default key="_controller">AppBundle:Client:edit</default>
    </route>

    <route id="client_delete" path="/client-delete/{id}">
        <default key="_controller">AppBundle:Client:delete</default>
    </route>

    <route id="advertisement_list" path="/advertisement">
        <default key="_controller">AppBundle:Advertisement:list</default>
    </route>

    <route id="advertisement_add" path="/advertisement-add">
        <default key="_controller">AppBundle:Advertisement:add</default>
    </route>

    <route id="advertisement_edit" path="/advertisement-edit/{mode}/{id}">
        <default key="_controller">AppBundle:Advertisement:edit</default>
    </route>

    <route id="advertisement_delete" path="/advertisement-delete/{id}">
        <default key="_controller">AppBundle:Advertisement:delete</default>
    </route>

    <route id="advertisement_invocation_code" path="/advertisement-invocation-code/{id}">
        <default key="_controller">AppBundle:Advertisement:invocationCode</default>
    </route>

</routes>
